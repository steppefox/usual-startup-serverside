extends ../layouts/default
block content
  #mainSidebar.sidebar.sidebar-left(toggleable='toggleable', parent-active-class='sidebar-left-in', data-ng-swipe-left='toggle(\'mainSidebar\')')
    h1.app-name My App
    .scrollable
      .scrollable-content
        .list-group(toggle='off', bubble='bubble', target='mainSidebar')
          a.list-group-item(href='#/')
            | Home
            i.fa.fa-chevron-right.pull-right
  .app
    .navbar.navbar-app.navbar-absolute-top
      .pull-left.lay-top-menu-avatar
        img.img-responsive.img-rounded(alt='140x140', src='/img/rabit.png')
      .pull-left.lh-50.ml-5.top-menu-player-name
        | Эльдар Амантай
      .pull-left.lh-50.ml-5
        img(src='/img/coin.png', style='max-height: 30px;')
        span.top-menu-base-money
          | 5
        span.money-color
          | +5
      .pull-right
        a.btn.btn-default(data-ng-click='toggle(\'mainSidebar\');')
          i.fa.fa-bars
    .navbar.navbar-app.navbar-absolute-bottom
      .container-fluid
        .row
          .col-xs-3.lay-bottom-menu-btn
            a(href="#")
              i.fa.fa-tasks
          .col-xs-3.lay-bottom-menu-btn
            a(href="#")
              i.fa.fa-users
          .col-xs-3.lay-bottom-menu-btn
            a(href="#")
              i.fa.fa-folder-open
          .col-xs-3.lay-bottom-menu-btn
            a.completeStepArrow(href="#")
              i.fa.fa-arrow-right
    .app-body
      .app-content(ng-view)
      

